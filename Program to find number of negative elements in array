#include<stdio.h>  // total no. of negative elements in array
int main()
{
    int size, a[100], i, count = 0;
    printf("enter size of array = ");
    scanf("%d",&size);
    printf("enter elements of array\n");
    for(i=0;i<size;i++)
    {
        scanf("%d", &a[i]);
    }
    for(i=0;i<size;i++)
    {
        if(a[i]<0)
        {
            count ++;
        }

    }
    printf("Number of negative elements in array = %d",count);
    return 0;
}
